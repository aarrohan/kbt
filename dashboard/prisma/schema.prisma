generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Visibility {
  published
  scheduled
  hidden
}

enum CouponType {
  fixed
  percentage
}

model DashboardUser {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  role         String
  name         String
  email        String    @unique
  username     String    @unique
  password     String
  lastSignedIn DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Category {
  id                 String     @id @default(auto()) @map("_id") @db.ObjectId
  parentCategoryId   String?    @db.ObjectId
  visibility         Visibility
  imgUrl             String
  slug               String     @unique
  title              String
  description        String
  seoMetaTitle       String?
  seoMetaDescription String?
  seoMetaKeywords    String?
  publishDate        DateTime?
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
}

model Coupon {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  visibility  Visibility
  type        CouponType
  title       String
  code        String     @unique
  value       Int
  publishDate DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
